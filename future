$('.rb').on('mousewheel', function(e) {
var event = e.originalEvent;
$('[data-id="screen_1"]').css('top', (-event.deltaY) + 'px');
$('[data-id="screen_2"]').css('top', (400-event.deltaY) + 'px');
e.stopPropagation();
e.preventDefault();
});
$('.rb').on('mousewheel', function(e) {
var event = e.originalEvent;
$('[data-id="screen_1"]').css('top', ($('[data-id="screen_1"]').position().top-event.deltaY) + 'px');
$('[data-id="screen_2"]').css('top', ($('[data-id="screen_2"]').position().top-event.deltaY) + 'px');
e.stopPropagation();
e.preventDefault();
});
